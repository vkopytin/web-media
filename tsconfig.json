{
    "compilerOptions": {
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "module": "commonjs",
        "target": "es5",
        "noImplicitAny": true,
        "sourceMap": true,
        "jsx": "react",
        "allowJs": true,
        "allowUnreachableCode": true,
        "baseUrl": "static/js",
        "importHelpers": true,
        "strict": true
    },
    //    "include": [ "**/*.ts" ],
    "exclude": [
        "**/node_modules/*",
        "**/server/*",
        "**/bundle/*"
    ],
    "filesGlob": [
        "./src/*.d.ts"
    ]
}